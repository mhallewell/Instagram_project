<head>
  <title>Saved Searches</title>
</head>
<body class="cs-squeeze">


<form class="user-form" action="/user/savedsearches/add" method="post">
  <input type="hidden" name="_id" value="{{user._id}}">
  <p>
    <input type="text" name="search" value="" placeholder="Tag Name">
  </p>
  <p>
    <button type="submit">Submit</button>
  </p>
</form>

{{#if user.tags}}
  <h2>Current Tags</h2>
  {{#each user.tags}}
    <form action="/user/savedsearches/remove" method="post">
      {{this}}
      <input type="hidden" name="search" value="{{this}}">
      <button type="submit">Delete</button>
    </form>
  {{/each}}
{{/if}}

<button class="btn-search" type="searched" name="button"> #search</button>
<button class="btn-search" type="searched" name="button"> #search</button>
<button class="btn-search" type="searched" name="button"> #search</button>
<button class="btn-search" type="searched" name="button"> #search</button>
</body>
